<h3>Сотрудники</h3>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Возраст</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.LastName</td>
                <td>@employee.FirstName</td>
                <td>@employee.Patronymic</td>
                <td>@employee.Age</td>
                <td>
                    <a href="~/Home/Employee/@employee.Id">Инфо.</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<hr/>
<a href="~/home/index">На главную</a>
